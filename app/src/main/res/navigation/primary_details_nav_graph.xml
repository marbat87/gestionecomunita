<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/community_list_fragment">

    <fragment
        android:id="@+id/community_list_fragment"
        android:name="it.cammino.gestionecomunita.ui.comunita.list.CommunityListFragment"
        android:label="CommunityListFragment">
        <action
            android:id="@+id/show_community_detail"
            app:destination="@id/community_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/community_detail_fragment"
        android:name="it.cammino.gestionecomunita.ui.comunita.detail.CommunityDetailFragment"
        android:label="community_detail"
        tools:layout="@layout/fragment_community_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>